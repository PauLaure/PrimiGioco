<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">
    <display-name>PrimiGioco_</display-name>
    <welcome-file-list>

        <welcome-file>LoginView.jsp</welcome-file>

    </welcome-file-list>
    <servlet>
        <servlet-name>ModificaAdminControl</servlet-name>
        <servlet-class>control.ModificaAdminControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControl</servlet-name>
        <servlet-class>control.AdminControl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>InsertAdminControl</servlet-name>
        <servlet-class>control.InsertAdminControl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DettagliControl</servlet-name>
        <servlet-class>control.DettagliControl</servlet-class>

    </servlet>


    <servlet>
        <servlet-name>CatalogoControl</servlet-name>
        <servlet-class>control.CatalogoControl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>control.LoginControl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CatalogoControl</servlet-name>
        <url-pattern>/catalogo</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>DettagliControl</servlet-name>
        <url-pattern>/dettagli</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>AdminControl</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ModificaAdminControl</servlet-name>
        <url-pattern>/modifica</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>InsertAdminControl</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>


</web-app>
